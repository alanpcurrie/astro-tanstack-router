{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "types": [
      "vitest/importMeta"
    ],
    "paths": {
      "~/*": ["src/*"],
      "~components/*": ["src/components/*"],
      "~layouts/*": ["src/layouts/*"],
      "~pages/*": ["src/pages/*"]
    }
  }
}